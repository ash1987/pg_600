<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myTabHost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/mainFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d3d3d3" />

        <RadioGroup
            android:id="@+id/home_radioBtn_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/homeRadioButton"
                style="@style/radio_botton_style1"
                android:checked="true"
                android:text="@string/main_menu_string"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#3b3b3b" />

            <RadioButton
                android:id="@+id/settingRadioButton"
                style="@style/radio_botton_style1"
                android:text="@string/setting_string"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#3b3b3b" />

            <RadioButton
                android:id="@+id/smartHomeRadioButton"
                style="@style/radio_botton_style1"
                android:text="@string/smart_home_string"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>