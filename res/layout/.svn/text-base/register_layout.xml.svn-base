<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/register_title_bg"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/backTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/jt_selector"
            android:drawablePadding="7dp"
            android:text="@string/new_user_register_string"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/containerLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_account_string"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userEt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/register_edit_bg"
                android:hint="@string/hint_input_phone_string"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/pwdEt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/register_edit_bg"
                android:hint="@string/hint_input_pwd_string"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:password="true"
                android:singleLine="true"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="5" >

                <EditText
                    android:id="@+id/verifyEt"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/register_edit_bg"
                    android:hint="@string/hint_input_verify_code_string"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/verifyBt"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/register_selector"
                    android:singleLine="true"
                    android:text="@string/request_verify_code_string"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/registerSuccessTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/register_success_string"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/registerBt"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@id/containerLl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/register_selector"
            android:gravity="center"
            android:text="@string/liji_register_string"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>