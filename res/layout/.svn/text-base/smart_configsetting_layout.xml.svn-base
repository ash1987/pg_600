<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    android:orientation="vertical" >

	<include  
	    android:padding="15dp"
	    layout="@layout/second_title_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginTop="20dp" >

        <View
            android:id="@+id/tempView"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@id/tempView"
            android:layout_toLeftOf="@id/tempView"
            android:background="@drawable/blue_box_bg"
            android:clickable="true"
            android:padding="12dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lights_on" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@id/tempView"
            android:layout_toRightOf="@id/tempView"
            android:background="@drawable/blue_box_bg"
            android:clickable="true"
            android:padding="14dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lights_off" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lightOnRl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tempView"
            android:layout_toLeftOf="@id/tempView"
            android:background="@drawable/blue_box_bg"
            android:clickable="true"
            android:padding="15dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/light_on_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lightOffRl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tempView"
            android:layout_toRightOf="@id/tempView"
            android:background="@drawable/blue_box_bg"
            android:clickable="true"
            android:padding="15dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/light_off_selector" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>